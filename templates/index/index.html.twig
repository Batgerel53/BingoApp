        iframe {
            position: absolute;
            top: 30%;
            left: 30%;
            width: 600px;
            height: 600px;
            transform: translate(-50%, -50%);
        }


        #text{
            position: absolute;
            color: #3e3ee8;
            left: 30%;
            top: 10%;
            transform: translate(-50%, -50%);
        }

        p
        {
            font-size: 36px;
        }

    </style>
{% endblock %}

