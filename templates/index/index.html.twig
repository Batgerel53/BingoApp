            color: white;
            font-weight: bold;
            text-align: center;
        }

        .calc
        {
            border-radius: 28px;
            padding: 16px;
            display: grid;
            grid-template-columns: repeat(8, 66px);
        }

        button {
            box-shadow: inset 6px 6px 13px #fff, 6px 6px 13px rgba(0, 0, 0, .16);
            color: #0000ee;
            font-weight: bold;
            background-color: rgb(255, 186, 0);
            border: none;
            border-radius: 50%;
            width:  50px;
            height: 50px;
            margin: 10px;
        }

        ::placeholder {
            color: blue;
            font-size: 36px;
            font-weight: bold;
        }

        input {
            grid-column: span 3;
            height: 48px;
            width: 167px;
            box-shadow: inset -6px -6px 13px #fff, inset 6px 6px 13px rgba(0, 0, 0, .16);
            background-color: #ecf0f3;
            border: none;
            border-radius: 32px;
            color: rgba(26, 25, 25, 16);
            text-align: end;
            margin: 0px 0px 30px 10px;
            padding: 20px;
            font-size: 30px;
        }

        .on {
            height: 48px;
            width: 100px;
            box-shadow: inset -6px -6px 13px #fff, inset 6px 6px 13px rgba(0, 0, 0, .16);
            background-color: #ecf0f3;
            border: none;
            border-radius: 32px;
            color: rgba(26, 25, 25, 16);
            text-align: end;
            margin: 0px -15px;
            padding: 20px;
            font-size: 40px;
        }

        .send {
            height: 48px;
            width: 140px;
            box-shadow: inset -6px -6px 13px #fff, inset 6px 6px 13px rgba(0, 0, 0, .16);
            background-color: #ecf0f3;
            border: none;
            border-radius: 32px;
            color: rgba(26, 25, 25, 16);
            text-align: end;
            margin:-80px 420px;
            padding: 20px;
            font-size: 40px;
        }

        label {
            padding: 20px 30px;
            display: inline-block;
        }

        .labelT
        {
            font-size: 12px;
        }
        #username
        {
            background: #6093de;
            width: 210px;

        }

        #usernameS
        {
            background: #6093de;
            width: 120px;
        }
