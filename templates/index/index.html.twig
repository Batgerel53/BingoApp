        .triangle-right
            {
            width: 0;
            height: 0;
            margin: 7px 5px;
             }
        .triangle-right
        {
            border-top: 14px solid transparent;
            border-bottom: 14px solid transparent;
        }
        .triangle-right{
            border-left:
                    20px solid white;
        }
        .triangle-right-on
        {
            width: 0;
            height: 0;
            margin:7px -90px;
        }
        .triangle-right-on
        {
            border-top: 14px solid transparent;
